{
	"extends": [
		"config:base"
	],
	"automerge": true,
	"major": {
		"automerge": false
	},
	"lockFileMaintenance": {
		"enabled": false,
		"automerge": false
	},
	"packageRules": [{
			"packagePatterns": [
				"@nuxtjs"
			],
			"groupName": "@nuxtjs"
		},
		{
			"packagePatterns": [
				"^eslint"
			],
			"groupName": "eslint"
		}
	],
	"node": {
		"supportPolicy": ["lts_active"]
	},
	"labels": [
		"renovate"
	],
	"prHourlyLimit": 4,
	"prConcurrentLimit": 15,
	"rangeStrategy": "bump",
	"bumpVersion": null,
	"semanticCommits": true,
	"schedule": "before 8am on Monday"
}